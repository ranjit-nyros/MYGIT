<h1>Listing Users</h1>

<table border=0 cellspacing=2 cellpadding=2>
  <tr>
    <th><u>Userid</u></th>
    <th><u>Username</u></th>
    <th><u>Age</u></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.user_id %></td>
    <td><%= user.user_name %></td>
    <td><%= user.user_age %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

